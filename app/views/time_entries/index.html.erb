<h1>Time Tracking tool</h1>

<h2><%= @my_project.name %></h2>
<ul>
	<% @my_entries.each do |entry| %>
		<li>
			<%= entry.hours %> h <%= entry.minutes %> m - <%= entry.date %>
			<!-- <%= link_to 'Edit', "/projects/#{@my_project.id}/time_entries/#{entry.id}/edit" %> -->
			<%= link_to 'Edit', edit_project_time_entry_path(@my_project, entry) %>
			<%= link_to('Delete', project_time_entry_path(@my_project, entry),
				method: :delete, data: { confirm: 'Are you sure?'})  %>
		</li>
	<% end %>
</ul>

<%= link_to "Back to Projects", '/projects' %>
<%= link_to "New entry", "/projects/#{@my_project.id}/time_entries/new" %>